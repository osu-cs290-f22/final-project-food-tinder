<div id="modal-backdrop" class="hidden"></div>
<div id="add-item-modal" class="hidden">
    <div class="modal-dialog">

    <div class="modal-header">
        <h3>Add Food Item</h3>
        <button type="button" id="modal-close" class="modal-hide-button">&times;</button>
    </div>

    <div class="modal-body">

        <div class="food-input-element">
            <label for="food-name-input">Food Name</label>
            <input type="text" id="food-name-input" maxlength="15"></input>
        </div>

        <div class="food-input-element">
            <label for="food-photo-input">Photo URL</label>
            <input type="text" id="food-photo-input">
        </div>

        <div class="food-input-element">
            <label for="food-health-input">Health Score (1-10)</label>
            <input type="number" id="food-health-input" min="1" max="10">
        </div>

        <div class="food-input-element">
            <label for="food-cuisine-input">Cuisine Type</label>
            <input type="text" id="food-cuisine-input" maxlength="10">
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" id="modal-cancel" class="modal-hide-button action-button">Cancel</button>
        <button type="button" id="modal-accept" class="action-button">Add</button>
    </div>

    </div>
</div>